<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="code_first4"> <!-- Name of the DATABASE -->
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/code_first4?createDatabaseIfNotExist=true&amp;useSSL=false" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.username" value="root"/>  <!-- USERNAME FOR MYSQL -->
            <property name="hibernate.connection.password" value="1001"/> <!-- PASSWORD FOR MYSQL -->
            <property name = "hibernate.dialect" value="org.hibernate.dialect.MariaDB10Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name = "hibernate.show_sql" value = "true" />
        </properties>
    </persistence-unit>
</persistence>